<% if @books.blank? %>
<p>There are no books in the system. Go ahead and add a new one!</p>
<% else %>
<ul id = "books">
   <% @books.each do |c| %>
    <li><%= link_to c.title, {:action => 'show', :id => c.id} -%></li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new book", new_book_path %></p>
